<% provide(:title, 'Request Contact') %>
<h1>Request Contact</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(@contact) do |f| %>
        <%= render 'shared/error_messages', object: f.object %>

        <% if @users.any? %>
            <ul class="users">
              <% @users.each do |user| %>
                  <li>
                    <%= gravatar_for user %>
                    <%= check_box_tag "contacted_ids[]", user.id%>
                    <%= f.label user.name %>
                  </li>
              <% end %>
            </ul>
        <% end %>

        <%= f.submit "Add", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>